				@media (orientation: landscape) and (max-width: md)
					left (137/vm)
					top (22/vm)
					&:before
						left (6/vm) !important
						top (6/vm) !important
					

				
				&:hover ~.main-chars__features__block__img_2
					display block
					
			&_3
				@media (min-width: xl)
					left (1215/p)
					top (532/p)
				@media (min-width: md) and (max-width: xl)
					left (1215/vd)
					top (532/vd)
				@media (orientation: portrait) and (max-width: md)
					left (210/vm)
					top (220/vm)
					
					&:after
						left (75/vm)
