	&__table
		width 100%
		
		&__title
			
			position relative
			font-family fontR
			margin 0 auto !important
			display table
			
	
			@media (min-width: xl)
				font-size (28/r)
				padding-right (35/p)
			@media (min-width: md) and (max-width: xl)
				font-size (28/vd)
				padding-right (35/vd)
			&__arrow
				display block
				position absolute
				right 0
				
				font-size 0
				background url("/img/arrow.png") no-repeat
				background-size cover
				transition transform 0.5s
				@media (min-width: xl)
					top (10/p)
					width (26/p)
					height (16/p)
					&:hover
						cursor pointer
				@media (min-width: md) and (max-width: xl)
					top (10/vd)
					width (26/vd)
					height (16/vd)
					&:hover
						cursor pointer
				&_active
					transition transform 0.5s
					transform rotate(180deg)
					
		&__block
			display none
			&_active
				@media (min-width: md)
					display flex
				@media (orientation: portrait) and (max-width: md)
					display block
			
			@media (min-width: desc)
				padding-top (50/vd)
			&__right
				font-size 0
				text-align center
				@media (min-width: desc)
					width 45%
					& img
						width (400/vd)
			&__left
				@media (min-width: desc)
					width 55%
				