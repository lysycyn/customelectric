@require "var.styl"

.main-video
	@media (min-width: xl)
		margin-bottom (111/p)
	@media (min-width: md) and (max-width: xl)
		margin-bottom (111/vd)
	@media (orientation: portrait) and (max-width: md)
		margin-bottom (22/vm)
	@media (orientation: landscape) and (max-width: md)
		margin-bottom (20/vm)

	& .container
		@media (min-width: xl)
			padding 0 (180/vd)
		@media (min-width: md) and (max-width: xl)
			padding 0 (180/vd)
		@media (max-width: md)
			padding 0

	&__frame
		margin 0 auto
		display block
		@media (min-width: xl)
			width 70%
			height px(600)
			margin-bottom px(33)
		@media (min-width: md) and (max-width: xl)
			width 70%
			height d(600)
			margin-bottom d(33)
		@media (orientation: portrait) and (max-width: md)
			width 100%
			height m(177)
			margin-bottom m(17)
		@media (orientation: landscape) and (max-width: md)
			width 100%
			height m(140)
			margin-bottom m(10)
		&.index
			@media(min-width:md)
				width 80%
			@media(max-width:md)
				width 80%
				margin-left auto
				margin-right auto

	&__social
		font-size 0
		@media (orientation: portrait) and (max-width: md)
			padding 0 (17/vm)
			height (28/vm)
		@media (orientation: landscape) and (max-width: md)
			padding 0 (17/vm)
			height (20/vm)

		&__phone
			display inline-block
			float right
			font-family fontR
			@media (min-width: xl)
				font-size (25/r)
				line-height (42/r)
				text-transform uppercase
				color color1
			@media (min-width: md) and (max-width: xl)
				font-size (25/vd)
				line-height (42/vd)
				text-transform uppercase
				color color1
			@media (max-width: md)
				position relative
				&:after
					content ""
					position absolute
					@media (orientation: portrait)
						width (28/vm)
						height (28/vm)
					@media (orientation: landscape)
						width (20/vm)
						height (20/vm)
					top 0
					right 0
					background url("/img/phone.png") no-repeat
					background-size cover
