
@require "var.styl"

.btn
	outline 0
	font-family fontR
	text-transform uppercase
	@media (min-width: xl)
		border 1px solid color1
	@media (min-width: md) and (max-width: xl)
		border 1px solid color1
	@media (max-width: md)
		border 1px solid color1

	&_main
		display inline-block
		@media (min-width: xl)
			font-size rem(20)
			padding px(25) px(50)
		@media (min-width: md) and (max-width: xl)
			font-size rem(20)
			padding d(25) d(50)
		@media (orientation: portrait) and (max-width: md)
			font-size m(10)
			padding m(13) m(33)
		@media (orientation: landscape) and (max-width: md)
			font-size m(9)
			padding m(7) m(14)
		color white
		&:hover
			background rgba(0, 229, 255, 0.4)

	&_black
		color black
		&:hover
			background color1
			border 1px solid black
			color white

	&_buy
		display inline-block
		margin 0 auto
		@media (min-width: xl)
			font-size rem(20)
			padding px(17) px(55)
			&:hover
				background rgba(0, 229, 255, 0.4)
		@media (min-width: md) and (max-width: xl)
			font-size d(20)
			padding d(17) d(55)
			&:hover
				background rgba(0, 229, 255, 0.4)
		@media (orientation: portrait) and (max-width: md)
			font-size m(13)
			padding m(13) m(33)
		@media (orientation: landscape) and (max-width: md)
			font-size m(9)
			padding M(7) m(14)
		color white

	&_gal
		display block
		margin 0 auto
		text-align center
		@media (min-width: xl)
			font-size rem(20)
			padding px(17) 0
			margin-bottom px(25)
			&:last-child
				margin-botom 0
			&:hover
				background rgba(0, 229, 255, 0.4)
		@media (min-width: md) and (max-width: xl)
			font-size d(20)
			padding d(17) 0
			margin-bottom d(25)
			&:last-child
				margin-botom 0
			&:hover
				background rgba(0, 229, 255, 0.4)
		@media (orientation: portrait) and (max-width: md)
			font-size m(10)
			padding m(4) 0
			margin-bottom m(10)
		@media (orientation: landscape) and (max-width: md)
			font-size m(8)
			padding m(7) 0
			margin-bottom m(7)
		color white
