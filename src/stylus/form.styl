@require "var.styl"

.form-outer
	visibility hidden
	position fixed
	z-index 1000
	width 100%
	height 100%
	background rgba(0,0,0, .5)
	top 0
	opacity 0
	transition .5s ease
	&:hover
		cursor pointer

.form-outer-container
	visibility hidden
	position fixed
	z-index 2000
	background #fff
	top 20vh
	left 0
	right 0
	margin auto auto
	opacity 0
	transition .5s ease
	@media (min-width: xl)
		width px(500)
		border 1px solid #000
	@media (min-width: md) and (max-width: xl)
		width d(550)
		border 1px solid #000
	@media (orientation: portrait) and (max-width: md)
		width 90%
	@media (orientation: landscape) and (max-width: md)
		width 80%
		top 15vh
	display block
	box-sizing border-box
	& .form__block
		@media (orientation: landscape) and (max-width: md)
			padding m(7) m(20)
		box-sizing border-box
		& input[type="text"]
			@media (orientation: landscape) and (max-width: md)
				border-radius 0
				font-size m(10) !important
				padding m(5) m(15)
				margin-bottom m(5) !important
		& textarea
			@media (orientation: landscape) and (max-width: md)
				font-size m(10) !important
				padding m(5) m(15) !important
				margin-bottom m(5) !important

.rental-form-show
	visibility visible
	opacity 1
	transform .5s ease

.form-outer-btn
	display block
	border none
	outline none
	background-color none
	background-image url('/img/close.png')
	background-repeat no-repeat
	background-size cover
	position absolute
	&:hover
		cursor pointer
	@media (min-width: md)
		width 25px
		height 25px
		top -30px
		right -30px
	@media (max-width: md)
		@media (orientation: portrait)
			top m(-27)
			right m(-11)
			width m(22)
			height m(22)
		@media (orientation: landscape)
			top 0
			right m(-15)
			width m(12)
			height m(12)


.popup
	// visibility hidden
	position fixed
	left 0
	right 0
	margin 0 auto
	width
	text-align center
	bottom 50vh
	z-index 10000
	color #000
	background-color #fff
	border 1px solid color2
	font-family fontSB
	box-sizing border-box
	box-shadow 1px 2px 19px 0px rgba(50, 50, 50, 1)
	background-repeat no-repeat
	@media (min-width: xl)
		width 330px
		padding 15px 25px
		padding-left 50px
		font-size 18px
	@media (min-width: md) and (max-width: xl)
		width 25%
		padding 15px 25px
		padding-left 50px
		font-size d(25)
	@media (max-width: md)
		@media(orientation: portrait)
			width 70%
			padding m(10) m(15)
			padding-left m(40)
			font-size m(12)
		@media(orientation: landscape)
			width 40%
			padding m(5) m(10)
			padding-left m(20)
			font-size m(7)

	&-success
		background-image url("/img/done.png")
		@media (min-width: xl)
			background-size 30px
			background-position 2% 45%
		@media (max-width: xl) and (min-width: md)
			background-size 30px
			background-position 2% 45%
		@media (max-width: md)
			@media (orientation: portrait)
				background-size m(20)
				background-position 2% 40%
			@media (orientation: landscape)
				background-size m(15)
				background-position 2% 40%

	&-cancel
		background-image url("/img/cancel.png")
		@media (min-width: xl)
			background-size 30px
			background-position 4% 50%
		@media (max-width: xl) and (min-width: md)
			background-size 30px
			background-position 5% 50%
		@media (max-width: md)
			@media (orientation: portrait)
				background-size m(20)
				background-position 5% 45%
			@media (orientation: landscape)
				background-size m(15)
				background-position 3% 45%

.show
	visibility visible !important

.popup-success1
	position fixed
	left 0
	right 0
	margin 0 auto
	width
	text-align center
	bottom 50vh
	z-index 10000
	color #fff
	background-color rgba(0,0,0, .3)
	border 2px solid color1
	border-radius 5px
	font-family fontSB
	box-shadow 1px 2px 19px 0px rgba(50, 50, 50, 1)

	@media (min-width: xl)
		width 200px
		padding 30px 25px
		padding-left 50px
		font-size 25px
	@media (min-width: md) and (max-width: xl)
		width 200px
		padding 15px 25px
		padding-left 50px
		font-size d(25)
	@media (max-width: md)
		width 70%
		@media(orientation: portrait)
			padding m(5) m(7)
		@media(orientation: landscape)
			padding m(5) m(7)

.form
	&__contacts
		display flex
		justify-content space-around

	&_main-map
		@media (min-width: xl)
			position absolute
			width px(500)
			right 140px
			top 45px
			border 1px solid black

		@media (min-width: md) and (max-width: xl)
			position absolute
			width d(550)
			right d(110)
			top d(124)
			border 1px solid black

		@media (orientation: portrait) and (max-width: md)
			border-top 1px solid rgba(0, 0, 0, 0.2)
			width 100%
			margin-bottom m(25)
		@media (orientation: landscape) and (max-width: md)
			border-top 1px solid rgba(0, 0, 0, 0.2)
			width 100%
			margin-bottom m(15)
		display block
		box-sizing border-box
		z-index 1

	&__block
		background white
		@media (min-width: xl)
			padding px(30) px(45)
		@media (min-width: md) and (max-width: xl)
			padding d(40) d(55)
		@media (orientation: portrait) and (max-width: md)
			padding m(16) m(33)
		@media (orientation: landscape) and (max-width: md)
			padding m(10) m(25)
		box-sizing border-box

		& input[type="text"]
			width 100%
			display block
			outline none
			border 2px solid color2
			background color2
			font-family fontL
			@media (min-width: xl)
				font-size rem(20)
				padding px(23) px(27)
				margin-bottom px(24)
			@media (min-width: md) and (max-width: xl)
				font-size d(20)
				padding d(23) d(27)
				margin-bottom d(24)
			@media (orientation: portrait) and (max-width: md)
				border-radius 0
				font-size m(10)
				padding m(10) m(14)
				margin-bottom m(10)
			@media (orientation: landscape) and (max-width: md)
				border-radius 0
				font-size m(9)
				padding m(10) m(25)
				margin-bottom m(10)
			box-sizing border-box
		& p
			font-family fontR
			text-align center
			color #838387
			@media(min-width: xl)
				font-size px(20)
				margin-bottom px(30)
			@media(max-width: xl)
				font-size d(20)
				margin-bottom d(30)
			@media(max-width: md)
				@media(orientation: portrait)
					font-size m(13)
					margin-bottom m(15)
				@media(orientation: landscape)
					font-size m(12)
					margin-bottom m(12)
		& textarea
			width 100%
			display block
			outline none
			border none
			background color2
			font-family fontL
			@media (min-width: xl)
				font-size rem(20)
				padding px(23) px(27)
				margin-bottom px(30)
			@media (min-width: md) and (max-width: xl)
				font-size d(20)
				padding d(23) d(27)
				margin-bottom d(24)
			@media (orientation: portrait) and (max-width: md)
				border-radius 0
				font-size m(11)
				padding m(10) m(14)
				margin-bottom m(15)
			@media (orientation: landscape) and (max-width: md)
				border-radius 0
				font-size m(9)
				padding m(10) m(25)
				margin-bottom m(10)
			box-sizing border-box
			resize none

	&__submit
		@media (max-width: md)
			position relative

			&:after
				display block
				position absolute
				content ""
				font-size 0
				background url("/img/phone.png") no-repeat
				background-size cover
				@media (orientation: portrait)
					width m(24)
					height m(24)
					left m(215)
					top m(8)
				@media (orientation: landscape)
					width m(20)
					height m(20)
					left m(215)
					top m(8)

		&__button
			width 100%
			display block
			background black
			color white
			text-align center
			text-transform uppercase
			border none
			outline none
			font-family fontR
			@media (min-width: xl)
				font-size px(24)
				padding px(30)
			@media (min-width: md) and (max-width: xl)
				font-size d(29)
				padding d(37)
			@media (orientation: portrait) and (max-width: md)
				border-radius 0
				font-size m(12)
				padding m(14) 0
			@media (orientation: landscape) and (max-width: md)
				border-radius 0
				font-size m(11)
				padding m(10) 0
			cursor pointer
	&__error
		border 2px solid red !important
		background-color #ffc0c0 !important
		animation shake 0.6s !important
		-webkt-animation shake 0.6s !important

.checkbox
	display none

.label
	display block
	@media(min-width: xl)
		width px(60)
		height px(60)
	@media(max-width: xl)
		width d(70)
		height d(70)
	@media(max-width: md)
		@media(orientation: portrait)
			width m(50)
			height m(50)
		@media(orientation: landscape)
			width m(30)
			height m(30)

	background-size cover
	&:hover
		cursor pointer
	&_phone
		background-image url('/img/phone_icon_disabled.png')
	&_whatsapp
		background-image url('/img/whatsapp_disabled.png')
	&_telegram
		background-image url('/img/telegram_disabled.png')


.checkbox_phone:checked+.label_phone
	background-image url('/img/phone_icon.png')
.checkbox_whatsapp:checked+.label_whatsapp
	background-image url('/img/whatsapp.png')
.checkbox_telegram:checked+.label_telegram
	background-image url('/img/telegram.png')
