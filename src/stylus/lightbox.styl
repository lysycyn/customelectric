@require 'var.styl'


.lb-close
	position absolute
	@media (min-width: xl)
		width 20px
		height 20px
		top (-40/p)
		right (-40/p)
	@media (min-width: md) and (max-width: xl)
		width (30/vd)
		height (30/vd)
		top (-40/vd)
		right (-40/vd)
	@media (max-width: md) 
		
		@media (orientation: portrait)
			width (15/vm)
			height (15/vm)
			top (-20/vm)
			right (-6/vm)
		@media (orientation: landscape)
			width (8/vm)
			height (8/vm)
			top (-11/vm)
			right (-11/vm)

